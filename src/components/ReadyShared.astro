---
import BackgroundImage from "@/assets/images/ready-bg.jpg";
import { Icon } from "astro-icon/components";
import Button from "@/components/Button.astro";

interface Card {
  icon: string;
  title: string;
  text: string;
  btnText: string;
  btnHref?: string;
}

interface Props {
  title: string;
  titleHighlight?: string;
  description: string;
  cards: Card[];
  class?: string;
}

const { title, titleHighlight, description, cards } = Astro.props;
---

<section>
  <div
    class="relative rounded-lg overflow-hidden bg-cover bg-center"
    style={`background-image: url(${BackgroundImage.src})`}
  >
    <div class="absolute inset-0 bg-primary-900/97 rounded-lg"></div>

    <div class="relative z-10 px-5 py-10 lg:p-15">
      <h2 class="text-white text-center">
        {title}
        {
          titleHighlight && (
            <>
              {" "}
              <span class="italic">
                <br />
                {titleHighlight}
              </span>
            </>
          )
        }
      </h2>

      <p
        class="text-body-variant-1 text-center mt-4 text-white"
        set:html={description}
      />

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-5 mt-12.5">
        {
          cards.map((card) => (
            <div class="bg-white px-6 py-7 rounded-lg flex flex-col justify-between">
              <div class="p-3.25 border border-neutral-200 rounded-lg w-fit mb-10 lg:mb-8 xl:mb-17.5">
                <Icon name={card.icon} size={34} />
              </div>

              <div>
                <h3 class="text-h3-variant-3 lg:text-xl xl:text-2xl mb-3 lg:mb-2 xl:mb-3">
                  {card.title}
                </h3>

                <p class="text-body-variant-1 mb-8 lg:mb-4 xl:mb-8">
                  {card.text}
                </p>

                <Button
                  href={card.btnHref || "#"}
                  width="fit"
                  variant="primary"
                  text={card.btnText}
                  class=""
                />
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
