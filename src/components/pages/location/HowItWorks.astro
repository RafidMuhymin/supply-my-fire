---
import Steps from "@/components/Steps.astro";

const { steps } = (
  (await import(
    `@/data/locations/${Astro.params.location}/how-it-works.ts`
  )) as typeof import("@/data/locations/cardiff/how-it-works.ts")
).default;
---

<section class="bg-primary-50 py-7 sm:py-15 noise">
  <h2 class="font-serif text-center text-secondary">
    How
    <em>Fireplace Installation</em>
    <br />
    Works in Cardiff
  </h2>

  <Steps
    steps={steps}
    class="grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5"
  />
</section>
