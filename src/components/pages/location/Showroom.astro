---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";

import Button from "@/components/Button.astro";

const { title, heading, description, contacts, buttons, mapImage } = (
  (await import(
    `@/data/locations/${Astro.params.location}/showroom.ts`
  )) as typeof import("@/data/locations/cardiff/showroom.ts")
).default;
---

<section class="bg-neutral-100 py-7.5 lg:py-15">
  <h2 class="text-center">
    {title.main}
    <em>{title.highlight}</em>
  </h2>

  <div class="lg:grid grid-cols-2 gap-6 xl:gap-10.5 items-center mt-7">
    <div class="max-w-172 mx-auto mb-6 lg:mb-0">
      <h3 class="text-2xl lg:text-[36px] font-serif text-secondary">
        {heading}
      </h3>

      <p class="text-body-variant-1 text-neutral-500 mt-6">
        {description}
      </p>

      <div class="space-y-3.5 mt-6 lg:mt-11">
        {
          contacts.map((contact) => (
            <div class="flex items-start">
              <div class="bg-white p-3 rounded-full w-fit mr-3">
                <Icon name={contact.icon} size={18} />
              </div>

              <p class="mt-2 font-semibold leading-6.5">
                {contact.title}{" "}
                <span set:html={contact.text} class="font-normal" />
              </p>
            </div>
          ))
        }
      </div>

      <div class="flex flex-col sm:flex-row mt-8 lg:mt-14 gap-2 lg:gap-3">
        {
          buttons.map((button) => (
            <Button
              href={button.href}
              width="fit"
              variant={button.variant as any}
              text={button.text}
              class="w-full sm:w-fit"
            />
          ))
        }
      </div>
    </div>

    <div class="h-full w-full lg:max-h-138 max-w-172 mx-auto">
      <Image {...mapImage} class="w-full h-full object-cover rounded-2xl" />
    </div>
  </div>
</section>
