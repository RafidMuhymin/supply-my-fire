---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";

import Button from "@/components/Button.astro";

import Map from "@/assets/images/cardiff-showroom-map.png";

const features = [
  "Operating electric fires from Solution Fires, Vision Fires, Gazco & Stovax",
  "Fireplace surrounds and mantel displays",
  "Media wall design examples",
  "Material and finish samples",
  "3D design examples of previous installations",
  "Knowledgeable team for advice and guidance",
];

const info: Array<{
  icon: string;
  header: string;
  items?: Array<{
    label?: string;
    text?: string;
    href?: string;
  }>;
}> = [
  {
    icon: "location",
    header: "Showroom Address:",
    items: [
      {
        text: "112 Whitchurch Road Cardiff CF14 3LY",
      },
    ],
  },
  {
    icon: "car",
    header: "Free parking available",
  },
  {
    icon: "building",
    header: "Close to Cardiff city centre",
  },
  {
    icon: "wheelChair",
    header: "Wheelchair accessible",
  },
  {
    icon: "time",
    header: "Opening Hours:",
    items: [
      {
        label: "Tuesday-Friday",
        text: "10:00 AM - 4:00 PM",
      },
      {
        label: "Saturday",
        text: "10:00 AM - 2:00 PM",
      },
      {
        label: "Monday & Sunday",
        text: "Closed",
      },
    ],
  },
  {
    icon: "call",
    header: "Contact:",
    items: [
      {
        label: "Phone",
        text: "029 2030 9664",
        href: "tel:+442920309664",
      },
      {
        label: "WhatsApp",
        text: "07532 669665",
        href: "https://wa.me/447532669665",
      },
    ],
  },
];

const buttons = [
  {
    href: "#",
    text: "Book Showroom Appointment",
    variant: "primary",
  },
  {
    href: "#",
    text: "Get Directions",
    variant: "white",
  },
  {
    href: "#",
    text: "Call Showroom",
    variant: "white",
  },
];
---

<section class="no-section-padding bg-neutral-100 py-7.5 lg:py-15">
  <h2 class="text-center">Visit Our Cardiff <em>Showroom</em></h2>

  <div class="lg:grid grid-cols-2 gap-8 xl:gap-10.5 items-center mt-7">
    <div class="max-w-172 mx-auto mb-6 lg:mb-0">
      <div class="grid gap-8">
        <div class="grid gap-6">
          <h3 class="text-4xl font-serif">Showroom Details</h3>

          <p class="text-body-variant-1 leading-6">
            Our Whitchurch Road showroom is the best place to experience our
            fireplace and media wall products. See electric fires operating,
            compare flame effects, touch material samples, and discuss your
            ideas with our expert team.
          </p>

          <ul class="list-disc pl-5">
            {
              features.map((feature) => (
                <li class="text-body-variant-1 leading-6">{feature}</li>
              ))
            }
          </ul>
        </div>

        <div class="grid gap-3.5">
          {
            info.map((info) => (
              <div
                class:list={[
                  "flex gap-3",
                  (!info.items || info.items.length === 1) && "items-center",
                ]}
              >
                <div class="bg-white rounded-full p-3 size-fit">
                  <Icon name={info.icon} class="size-4.5 shrink-0" />
                </div>

                <div
                  class:list={[
                    "flex gap-1",
                    info.items?.length === 1
                      ? "max-sm:flex-col sm:items-center"
                      : "flex-col",
                  ]}
                >
                  <span class="font-semibold">{info.header}</span>

                  {info.items?.map((line) => {
                    const Tag = line.href ? "a" : "span";

                    return (
                      <Tag
                        href={line.href}
                        class:list={[
                          "text-body-variant-1",
                          line.href && "hover:underline",
                        ]}
                      >
                        {line.label && <>{line.label}: </>}
                        {line.text}
                      </Tag>
                    );
                  })}
                </div>
              </div>
            ))
          }
        </div>
      </div>

      <div class="flex flex-col sm:flex-row flex-wrap mt-8 lg:mt-14 gap-3">
        {
          buttons.map((button) => (
            <Button
              href={button.href}
              width="fit"
              variant={button.variant as any}
              text={button.text}
              class="w-full sm:w-fit"
            />
          ))
        }
      </div>
    </div>

    <div class="h-full w-full max-w-172 mx-auto rounded-lg map-border">
      <Image
        src={Map}
        alt="Cardiff Showroom Map"
        class="w-full h-full object-cover rounded-2xl"
      />
    </div>
  </div>
</section>
