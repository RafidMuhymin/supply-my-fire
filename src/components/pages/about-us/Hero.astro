---
import { Icon } from "astro-icon/components";

import HeroContainer from "@/components/HeroContainer.astro";

import BackgroundImage from "@/assets/images/hero-bg-about-us.png";

const certifications = [
  "40+ Years Combined Experience",
  "HETAS Approved Retailer",
  "Gas Safe Certified",
  "Primary Dealer Status",
];
---

<HeroContainer bg={BackgroundImage} class="">
  <div class="absolute inset-0 bg-black/60 -z-10"></div>

  <div class="max-w-180 flex flex-col pt-14 pb-11">
    <h1 class="mb-4 md:mb-6">
      Cardiff's <em>Fireplace and Media Wall</em> Specialists Since 2023
    </h1>

    <p class="max-w-152 mb-6 md:mb-8 text-body-variant-2 text-neutral-300">
      Family-run business combining 40+ years of expertise with a passion for
      transforming Cardiff homes. HETAS approved, Gas Safe certified, and
      Cardiff's primary dealer for Solution Fires, Vision Fires, Gazco & Stovax.
    </p>

    <div class="flex flex-col gap-5 text-sm">
      {
        certifications.map((certification) => (
          <p class="flex gap-1.75 items-center">
            <Icon name="check" size={16} />

            {certification}
          </p>
        ))
      }
    </div>
  </div>
</HeroContainer>
