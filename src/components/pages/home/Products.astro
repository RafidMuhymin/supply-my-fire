---
import ProductImg1 from "@/assets/images/product-img-1.png";
import ProductImg2 from "@/assets/images/product-img-2.jpg";
import ProductImg3 from "@/assets/images/product-img-3.jpg";
import ProductImg4 from "@/assets/images/product-img-4.png";
import ProductImg5 from "@/assets/images/product-img-5.jpg";
import ProductImg6 from "@/assets/images/product-img-6.jpg";
import { Icon } from "astro-icon/components";

import { Image } from "astro:assets";

const products = [
  {
    category: "Media Wall",
    brand: "Solution Fires",
    name: "Solution SLE150",
    image: ProductImg1,
    features: [
      "1500mm panoramic LED flame display",
      "Designed specifically for media wall builds",
      "Multi-colour flame and fuel-bed lighting",
      "Slim-depth installation system",
    ],
  },
  {
    category: "Electric Fire",
    brand: "Gazco",
    name: "Gazco eStudio 135R",
    image: ProductImg2,
    features: [
      "Inset 1350mm electric fire",
      "Chromalight LED flame system",
      "Multiple flame colours and ember effects",
      "Heat output control via remote",
    ],
  },
  {
    category: "Media Wall Fire",
    brand: "Vision Fires",
    name: "Vision VS150",
    image: ProductImg3,
    features: [
      "Ultra-wide 1500mm flame window",
      "High-intensity LED flame technology",
      "Multiple flame and mood-lighting settings",
      "Edge-to-edge glass for clean modern look",
    ],
  },
  {
    category: "Gas Fire",
    brand: "Gazco",
    name: "Gazco Studio Edge",
    image: ProductImg4,
    features: [
      "High-efficiency frameless gas fire",
      "Realistic log or driftwood fuel-bed options",
      "Remote-control flame adjustment",
      "Balanced flue compatible",
    ],
  },
  {
    category: "Fireplace",
    brand: "Castlec",
    name: 'The Nuffield 56" Mantel',
    image: ProductImg5,
    features: [
      "Premium limestone or marble build",
      'Elegant 56" classic proportion',
      "Hand-finished detailing",
      "Suits both period and modern interiors",
    ],
  },
  {
    category: "Wood Stove",
    brand: "Stovax",
    name: "Stovax Riva Vision Midi",
    image: ProductImg6,
    features: [
      "DEFRA-approved for smoke control zones",
      "High-efficiency clean-burn system",
      "Large glass window for clear flame view",
      "Modern reflective black glass door",
    ],
  },
];
---

<section class="bg-primary-50 py-16">
  <div class="max-w-7xl mx-auto">
    <h2 class="text-secondary text-center mb-8 lg:mb-12.5">
      <span class="italic">Featured</span> Products
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-5 xl:mx-17">
      {
        products.map((product) => (
          <div class="bg-white rounded-xl p-2 overflow-hidden lg:max-w-93">
            <div class="relative">
              <Image
                src={product.image}
                alt={product.name}
                class="w-full h-56 rounded-t-sm rounded-b-xs object-cover"
              />
              <span class="absolute top-2.5 right-2.5 bg-primary-100 px-3 py-1 rounded-full text-sm text-secondary">
                {product.brand}
              </span>
            </div>

            <div class="px-3 py-4">
              <p class="text-small mb-2 lg:mb-1 text-neutral-500">
                {product.category}
              </p>
              <h3 class="text-h3-variant-2 text-secondary mb-4">
                {product.name}
              </h3>

              <ul class="space-y-2">
                {product.features.map((feature) => (
                  <li class="flex gap-2 items-start text-body-variant-1 text-neutral-500">
                    <Icon name="check" class="mt-1" />
                    <span>{feature}</span>
                  </li>
                ))}
              </ul>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
