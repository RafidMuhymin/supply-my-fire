---
import Button from "@/components/Button.astro";
import { Icon } from "astro-icon/components";

const formFields = [
  {
    type: "text",
    placeholder: "First name",
    name: "firstName",
  },
  {
    type: "text",
    placeholder: "Last name",
    name: "lastName",
  },
  {
    type: "email",
    placeholder: "Email",
    name: "email",
  },
  {
    type: "tel",
    placeholder: "Phone number",
    name: "phone",
  },
];
---

<section class="">
  <div class="bg-primary-900/30 py-16 px-12 rounded-[20px] mx-auto">
    <div class="grid grid-cols-1 lg:grid-cols-11 items-start">
      <!-- Left Side -->
      <div class="flex flex-col justify-between h-full lg:col-span-5 mr-36">
        <div>
          <h2 class="">Let's Talk</h2>

          <p
            class="text-body-variant-1 text-neutral-500 lg:text-secondary mt-2.5"
          >
            Have questions or want to learn more? Get in<br />
            touch with our teamâ€”we're here to help!
          </p>
        </div>

        <!-- Email Support Card -->
        <div class="bg-primary-900/20 rounded-[20px] p-7.5">
          <div class="flex items-center justify-center gap-2.5 mb-7.5">
            <Icon name="mailbox-2" size={22} />
            <h3 class="text-lg lg:text-xl lg:font-serif text-[#222222]">
              Email Support
            </h3>
          </div>
          <p class="text-gray/black text-center text-sm">
            We will here to assist you with any questions, concerns, or issues
            you may encounter.
          </p>
        </div>
      </div>

      <!-- Right Side - Contact Form -->
      <div class="bg-white rounded-2xl p-6 lg:col-span-6">
        <div class="mb-4">
          <h3 class="text-[26px] lg:text-3xl lg:font-serif leading-12.5">
            Contact Us
          </h3>
          <p class="text-sm text-neutral-500 lg:text-black">
            Our team will reach out to you shortly.
          </p>
        </div>

        <form class="space-y-4">
          {
            formFields.map((field) => (
              <input
                type={field.type as any}
                name={field.name}
                placeholder={field.placeholder}
                class="w-full p-4 bg-[#F5F5F5] border-0 rounded-lg text-black/80 placeholder-black/50 focus:outline-none focus:ring-2 focus:ring-primary-100 transition-all"
              />
            ))
          }

          <textarea
            name="message"
            placeholder="Write about your issue"
            rows="2"
            class="w-full p-4 bg-[#F5F5F5] border-0 rounded-lg text-black/80 placeholder-black/50 focus:outline-none focus:ring-2 focus:ring-primary-100 transition-all resize-none"
          ></textarea>

          <Button
            href="#"
            width="full"
            variant="primary"
            text="Send Enquiry"
            class=""
          />
        </form>
      </div>
    </div>
  </div>
</section>
