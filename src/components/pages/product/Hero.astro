---
import { Icon } from "astro-icon/components";
import HeroContainer from "@/components/HeroContainer.astro";
import Button from "@/components/Button.astro";

const {
  backgroundImage,
  backgroundImageSm,
  title,
  description,
  buttons,
  certificationsRow1,
  certificationsRow2,
} = (
  (await import(
    `@/data/products/${Astro.params.product}/hero.ts`
  )) as typeof import("@/data/products/media-wall/hero.ts")
).default;
---

<HeroContainer bg={backgroundImage} mobileBg={backgroundImageSm}>
  <div
    class="absolute inset-0 bg-[linear-gradient(282deg,rgba(0,0,0,0)_30.63%,rgba(0,0,0,0.70)_85.92%)] lg:bg-[linear-gradient(279deg,rgba(0,0,0,0)_-77.45%,rgba(0,0,0,0.70)_78.17%)] -z-10"
  >
  </div>

  <div class="max-w-142 flex flex-col pt-7.5 lg:pt-6 pb-11 lg:pb-12">
    <h1 class="mb-4 md:mb-7.5">
      <em>{title.main}</em>
      {title.highlight}
    </h1>

    <p class="mb-8 md:mb-6 text-body-variant-2 text-neutral-300">
      {description}
    </p>

    <div class="mb-8 flex flex-col md:flex-row gap-3.5">
      {
        buttons.map((button) => (
          <Button
            width="full"
            variant={button.variant as any}
            text={button.text}
            class="md:w-fit"
          />
        ))
      }
    </div>

    <div
      class="flex flex-col md:flex-row gap-2.5 lg:gap-5 text-sm mb-2.5 md:mb-5"
    >
      {
        certificationsRow1.map((certification) => (
          <p class="flex gap-1.75 items-center">
            <Icon name="check" size={16} />

            {certification}
          </p>
        ))
      }
    </div>

    <div class="flex flex-col md:flex-row gap-2.5 lg:gap-5 text-sm">
      {
        certificationsRow2.map((certification) => (
          <p class="flex gap-1.75 items-center">
            <Icon name="check" size={16} />

            {certification}
          </p>
        ))
      }
    </div>
  </div>
</HeroContainer>
